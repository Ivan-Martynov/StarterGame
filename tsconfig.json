{
	"compilerOptions": {
		"esModuleInterop": true,
		"target": "ESNext",
		"module": "ESNext",
		"sourceMap": true,
		"allowJs": true,
		"strict": false,
		"moduleResolution": "node",
		"lib": [
			"ESNext",
			"DOM"
		],
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		".git",
		"dist",
		"node_modules"
	]
}